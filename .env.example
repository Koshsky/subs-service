# Auth Service Database Configuration
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_pass
AUTH_DB_NAME=auth_db
AUTH_DB_SSLMODE=disable

# Core Service Database Configuration
CORE_DB_HOST=core-db
CORE_DB_PORT=5432
CORE_DB_USER=core_user
CORE_DB_PASSWORD=core_pass
CORE_DB_NAME=core_db
CORE_DB_SSLMODE=disable

# Service Ports
CORE_PORT=8080
AUTH_PORT=50051
AUTH_HEALTH_PORT=8081

# Service Communication
AUTH_SERVICE_ADDR=auth-service:50051

# Security
JWT_SECRET=your_jwt_secret_key

# TLS Configuration
# Set to true to enable TLS encryption (requires certificates)
ENABLE_TLS=false
TLS_CERT_FILE=certs/server-cert.pem
TLS_KEY_FILE=certs/server-key.pem

# Note: For development with TLS:
# 1. Run: ./scripts/generate-certs.sh
# 2. Set ENABLE_TLS=true
# For production, use certificates from a trusted Certificate Authority

# Database URLs (auto-generated from above vars, no longer used directly)
# The services now use the individual DB config variables above
# AUTH_DATABASE_URL=postgres://auth_user:auth_pass@auth-db:5432/auth_db?sslmode=disable
# CORE_DATABASE_URL=postgres://core_user:core_pass@core-db:5432/core_db?sslmode=disable