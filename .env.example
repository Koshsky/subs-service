# Database configuration
DB_USER=user
DB_PASSWORD=password
DB_NAME=subs_db

# Core service configuration
CORE_PORT=8080
AUTH_SERVICE_ADDR=auth-service:50051

# Auth service configuration
AUTH_PORT=50051

# Database URL for services
DATABASE_URL=postgres://user:password@db/subs_db?sslmode=disable

# JWT secret key
JWT_SECRET=your_jwt_secret_key

# TLS Configuration
# Set to true to enable TLS encryption (requires certificates)
ENABLE_TLS=false
TLS_CERT_FILE=certs/server-cert.pem
TLS_KEY_FILE=certs/server-key.pem

# Note: For development with TLS:
# 1. Run: ./scripts/generate-certs.sh
# 2. Set ENABLE_TLS=true
# For production, use certificates from a trusted Certificate Authority